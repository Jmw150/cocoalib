K := QQ;
P ::= K[X0,X1,X2,X3];
use P;
J := ideal(X2^3 +X0*X1*X3 +X3^3,
	   -3*X0*X2*X3 +X2^2*X3,
	   7*X0 +3*X1 +X2 -9*X3,
	   -X0 +6*X1 +3*X2 +3*X3);
TEST_ASSERT(IsZeroDim(J), true);
TEST_ASSERT(IsRadical(J), false);

